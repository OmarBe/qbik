<% provide(:title, 'New Session') %>
<%= form_tag sessions_path, method: :post do %>

    <div class='field'>
      <%= label_tag :name %>
      <%= text_field_tag :name %>
    </div>
    <div class='field'>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <%= submit_tag 'Login', class: 'btn btn-primary' %>
<% end %>
<hr />
<%= link_to 'Sign Up Free!',new_user_url, class: 'btn btn-primary' %>