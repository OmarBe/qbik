<% provide(:title, @user.username) %>
<p id="notice"><%= notice %></p>

<h1>
  <b>Username:</b>
  <%= @user.username %>
</h1>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<%= render 'post' %>

<% if current_user == @user %>
    <%= link_to 'Edit', edit_user_path(@user) %> |
    <%= link_to 'Back', users_path %>
<% end %>
